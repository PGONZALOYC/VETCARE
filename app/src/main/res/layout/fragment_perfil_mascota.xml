<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragmentos.PerfilMascotaFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mascLblPerfilMascota"
            android:textSize="35sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/titulo"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="25dp">

            <ImageButton
                android:id="@+id/mascIconoMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/mascDescIconoMascota"
                android:src="@drawable/user_mascota"
                android:background="@color/fondoTransparente"/>

            <ImageButton
                android:id="@+id/mascIconoEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editar"
                android:layout_marginStart="45dp"
                android:contentDescription="@string/mascDescIconoEditar"
                android:background="@color/fondoTransparente"/>

        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/mascTxtNombreMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mascTxtNombreMascota"
                android:maxLength="100"
                android:fontFamily="@font/poppins_medium"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/mascTxtEdadAniosMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mascTxtEdadAniosMascota"
                    android:layout_marginVertical="10dp"
                    android:maxLength="100"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none"
                    android:layout_marginRight="10dp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/mascTxtEdadMesesMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mascTxtEdadMesesMascota"
                    android:layout_marginVertical="10dp"
                    android:maxLength="100"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none"
                    android:layout_marginLeft="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mascTxtTipoMascota"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginVertical="5dp"
                android:textColor="@color/titulo"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mascTxtRazaMascota"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginVertical="5dp"
                android:textColor="@color/titulo"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:id="@+id/mascCboTipoMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:enabled="false"
                    android:layout_marginRight="10dp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Spinner
                    android:id="@+id/mascCboRazaMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:enabled="false"
                    android:layout_marginLeft="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>