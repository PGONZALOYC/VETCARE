<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.ProductosFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="30dp"
                android:layout_marginTop="20dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:contentDescription="@string/proDescIconoBuscar"
                android:src="@drawable/icono_atras" />

            <TextView
                android:id="@+id/proLblProductosTitulo"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:textSize="32sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/titulo"/>

            <ImageView
                android:id="@+id/proImagenCarrito"
                android:layout_width="35dp"
                android:layout_marginTop="20dp"
                android:layout_height="35dp"
                android:contentDescription="@string/proDescIconoCarrito"
                android:src="@drawable/icono_carrito"
                android:layout_marginLeft="80dp"/>/>
        </LinearLayout>
        <android.widget.ScrollView
            android:layout_width="match_parent"
            android:layout_height="665dp">
        <GridLayout
            android:id="@+id/contenedorEtiquetas"
            android:layout_width="wrap_content"
            android:layout_height="665dp"
            android:layout_marginTop="15dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_gravity="center_horizontal"/>
        </android.widget.ScrollView>
    </LinearLayout>

</FrameLayout>