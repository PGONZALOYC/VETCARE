<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.MenuFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/fondoMenu"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="10dp">

        <ImageButton
            android:id="@+id/frgMenImbReserva"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoTransparente"
            android:src="@drawable/reserva"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/frgMenImbProducto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoTransparente"
            android:src="@drawable/productos"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/frgMenImbMisCitas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoTransparente"
            android:src="@drawable/mis_citas"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/frgMenImbNosotros"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoTransparente"
            android:src="@drawable/nosotros"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/frgMenImbPerfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoTransparente"
            android:src="@drawable/perfil"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>